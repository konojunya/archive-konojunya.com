{
  "name": "konojunya.com",
  "version": "1.0.0",
  "description": "This is my home page.",
  "main": "webpack.config.js",
  "scripts": {
    "build": "webpack --progress --color",
    "build:watch": "webpack --progress --color -w",
    "lint": "npm run lint:css",
    "lint:watch": "stylelint src/**/*.scss --watch",
    "lint:css": "stylelint src/**/*.scss",
    "test": "ava --verbose",
    "test:watch": "ava --verbose -w",
    "cover": "nyc --reporter=lcov --reporter=text npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://konojunya@github.com/konojunya/konojunya.com.git"
  },
  "author": "konojunya",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/konojunya/konojunya.com/issues"
  },
  "homepage": "https://github.com/konojunya/konojunya.com#readme",
  "dependencies": {
    "hyperapp": "^1.0.2"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.4",
    "node-sass": "^4.5.3",
    "nyc": "^11.0.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "ts-loader": "^3.3.1",
    "tslint-config-airbnb": "^5.4.2",
    "typescript": "^2.6.2",
    "webpack": "^3.1.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "powerAssert": true,
    "babel": "inherit"
  },
  "nyc": {
    "extension": [
      ".tsx"
    ]
  }
}
